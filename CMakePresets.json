{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "clang-tidy",
            "cacheVariables": {
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--header-filter=${sourceDir}/*"
            }
        },
        {
            "name": "ci",
            "inherits": ["clang-tidy"],
            "binaryDir": "build"
        }
        
    ]
}
